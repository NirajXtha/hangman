#:kivy 2.0.0
#:import BackGround1 backgrounds.background1

<LoginScreen>:
    name: 'login'
    BackGround1:

    MDBoxLayout:
        orientation: 'vertical'
        padding: 40
        spacing: 20

        MDTextField:
            id: username
            hint_text: "Username"
            icon_right: "account"

        MDTextField:
            id: password
            hint_text: "Password"
            icon_right: "lock"
            password: True

        MDFillRoundFlatIconButton:
            text: "Login"
            icon: "login"
            pos_hint: {"center_x": 0.5}
            on_release: root.validate_login()

        MDFlatButton:
            text: "Don't have an account? Sign up"
            pos_hint: {"center_x": 0.5}
            on_release:
                root.manager.transition.direction = 'left'
                root.manager.current = 'signup'
